// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark"
  },
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet-latest"
    },
    "version": "2"
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "vim_mode": true,
  "relative_line_numbers": true,
  "buffer_font_size": 15,
  "ui_font_size": 15,
  "ssh_connections": [
    {
      "host": "vm",
      "projects": [
        {
          "paths": ["~/.dotfiles"]
        },
        {
          "paths": ["~/.dotfiles-private"]
        },
        {
          "paths": ["~/projects/play/codingchallenges.fyi"]
        },
        {
          "paths": ["~/projects/play/codingchallenges.fyi/docker/rust-docker"]
        },
        {
          "paths": [
            "~/projects/play/codingchallenges.fyi/rate-limiter/rust-ratelimiter"
          ]
        },
        {
          "paths": [
            "~/projects/play/codingchallenges.fyi/redis-server/zig-redis-server"
          ]
        },
        {
          "paths": ["~/projects/play/dev-vm"]
        },
        {
          "paths": ["~/projects/play/labs"]
        },
        {
          "paths": ["~/projects/work/acropolis"]
        },
        {
          "paths": ["~/projects/work/caterpillar"]
        },
        {
          "paths": ["~/projects/work/caterpillar-cli"]
        },
        {
          "paths": ["~/projects/work/caterpillar-ops-configs"]
        },
        {
          "paths": ["~/projects/work/caterpillar/master"]
        },
        {
          "paths": ["~/projects/work/pulumi-k8s-poc"]
        }
      ],
      "nickname": "vm"
    }
  ]
}
