font-size = 15
window-save-state = always
theme = Monokai Soda

# Keybindings
keybind = super+shift+j=goto_split:bottom
keybind = super+shift+k=goto_split:top
keybind = super+shift+h=goto_split:left
keybind = super+shift+l=goto_split:right

keybind = super+ctrl+j=resize_split:down,50
keybind = super+ctrl+k=resize_split:up,50
keybind = super+ctrl+h=resize_split:left,50
keybind = super+ctrl+l=resize_split:right,50

# write selection to a file
keybind = "super+shift+p=write_selection_file:paste"
keybind = "super+shift+o=write_selection_file:open"
