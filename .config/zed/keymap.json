// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Workspace && vim_mode == normal",
    "bindings": {
      "ctrl-t ctrl-f": "workspace::ToggleZoom",
      "ctrl-h": ["workspace::ActivatePaneInDirection", "Left"],
      "ctrl-l": ["workspace::ActivatePaneInDirection", "Right"],
      "ctrl-k": ["workspace::ActivatePaneInDirection", "Up"],
      "ctrl-j": ["workspace::ActivatePaneInDirection", "Down"],
      "ctrl-t ctrl-h": "pane::SplitLeft",
      "ctrl-t ctrl-l": "pane::SplitRight",
      "ctrl-t ctrl-j": "pane::SplitDown",
      "ctrl-t ctrl-k": "pane::SplitUp"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "cmd-j": "workspace::ToggleBottomDock",
      "ctrl-t ctrl-n": "workspace::NewTerminal"
    }
  },
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "ctrl-h": ["workspace::ActivatePaneInDirection", "Left"],
      "ctrl-l": ["workspace::ActivatePaneInDirection", "Right"],
      "ctrl-k": ["workspace::ActivatePaneInDirection", "Up"],
      "ctrl-j": ["workspace::ActivatePaneInDirection", "Down"],
      "g r": "editor::Rename",
      "g o": "outline_panel::ToggleFocus",
      "g e": "diagnostics::Deploy"
    }
  }
]
